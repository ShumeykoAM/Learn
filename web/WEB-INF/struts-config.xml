<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE struts-config PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
        "http://struts.apache.org/dtds/struts-config_1_3.dtd">

<struts-config>
    <form-beans>
        <form-bean name="DerivedActionForm"
                   type="struts.DerivedActionForm"/>

    </form-beans>

    <action-mappings>
        <action path="/struts/MyFirsAction"
                type="struts.DerivedAction"
                name="DerivedActionForm"
                scope="request"
                validate="true"
                input="/struts/ActionFormAction.jsp">
            <forward name="success"
                     path="/index.jsp"/>
        </action>

    </action-mappings>

    <message-resources parameter="my_first_struts"/>
</struts-config>

