<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts-config PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
        "http://struts.apache.org/dtds/struts-config_1_3.dtd">

<struts-config>

    <!--Перечислим все ActionForm и дадим им псевдонимы, эти псевдонимы будут использоваться дальше по этому файлу-->
    <form-beans>
        <form-bean name="LoginBean" type="tiles.LoginBean"/>
        <form-bean name="Submit" type="tiles.SubmitBean"/>
    </form-beans>

    <!--Связываем ActionForm, Action и JSP-->
    <action-mappings>
        <action path="/LoginController"
                type="tiles.TilesController"
                name="LoginBean">
            <forward name="tiles" path="/pages/tilesPage.jsp"/>
            <forward name="tilesE" path="/pages/tilesEnother.jsp"/>
        </action>
        <action path="/Login"
                type="org.apache.struts.actions.ForwardAction"
                name="Submit"
                scope="request"
                validate="true"
                parameter="/pages/myPage2.jsp?command=3"/>
        <action path="/Logout"
                type="org.apache.struts.actions.ForwardAction"
                name="Submit"
                scope="request"
                validate="true"
                parameter="/pages/myPage2.jsp?command=5"/>

    </action-mappings>

    <!--TODO 1) Прописываем плагин tiles и конфигурационный файл tiles-->
    <plug-in className="org.apache.struts.tiles.TilesPlugin">
        <set-property property="definitions-config" value="/WEB-INF/tiles-definition.xml"/>
    </plug-in>

</struts-config>

